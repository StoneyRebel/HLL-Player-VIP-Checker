# Hell Let Loose Discord Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# Discord Configuration (Required)
DISCORD_TOKEN=
DISCORD_CLIENT_ID=

# CRCON Server Configuration (Required)
CRCON_BASE_URL=http://localhost:8010
CRCON_API_TOKEN=

# Optional: Username/Password authentication
# CRCON_USERNAME=
# CRCON_PASSWORD=

# Bot Configuration
NODE_ENV=development
LOG_LEVEL=info
AUTO_DELETE_TIMEOUT=30000
COMMAND_COOLDOWN=3000
CRCON_TIMEOUT=10000

# Feature Toggles
VIP_NOTIFICATIONS_ENABLED=true
ENABLE_CONTESTS=true
ENABLE_STATISTICS=true

# Database
DB_BACKUP_INTERVAL=3600000
DB_MAX_BACKUPS=10
